# 🌐 Основные настройки
mixed-port: 7890
allow-lan: false
mode: rule
log-level: info
external-controller: 127.0.0.1:9090

# 🔍 DNS (оптимизировано для РФ)
dns:
  enable: true
  enhanced-mode: fake-ip
  nameserver:
    - 77.88.8.8  # 🇷🇺 Яндекс (основной)
    - 77.88.8.1  # 🇷🇺 Яндекс (резервный)
  fake-ip-filter:
  - "*.ru"
  - "*.рф"
  - "*.local"
  - "*.sber*"
  - "*.tinkoff*"
  - "gosuslugi.ru"
  - "*.mfc.ru"  # Для МФЦ
  - "*.rkn.gov.ru"  # Для сервисов РКН

# 🚇 TUN (обязательно в России)
tun:
  enable: true
  auto-route: true
  auto-detect-interface: true
  dns-hijack:
    - 77.88.8.8:53  # Перехват DNS для Яндекс

# 📦 Rule Providers
rule-providers:
  BlockedSites:
    type: http
    behavior: classical
    url: "https://raw.githubusercontent.com/ACL4SSR/ACL4SSR/master/Clash/ProxyLite.list"
    path: ./ruleset/BlockedSites.yaml
    interval: 3600  # 🔄 Каждый час

  BanAD:
    type: http
    behavior: classical
    url: "https://anti-ad.net/easylist.txt"  # Лучший для РФ
    path: ./ruleset/BanAD.yaml
    interval: 86400

  BanProgramAD:
    type: http
    behavior: classical
    url: "https://raw.githubusercontent.com/ACL4SSR/ACL4SSR/master/Clash/BanProgramAD.list"
    path: ./ruleset/BanProgramAD.yaml
    interval: 3600

# 🛰️ Прокси-сервер (ваш Reality) 🔥
proxies:
  - name: "🔒 Reality-VLESS"
    type: vless
    server: 185.225.201.116  # 🔥 Ваш IP
    port: 443
