    servername: google.com
    reality-opts:
      public-key: FT3lMLjZ5Ylcp8Svpsl9oQqMxAW1t4YFPg2Ng9R3_x4  # 🔥 Ваш ключ
      short-id: e4aa569bf544cfcc  # 🔥 Ваш ID
    client-fingerprint: chrome
    udp: true  # 🎮 Для игр/VoIP

# 🎚️ Группы
proxy-groups:
  - name: "🎯 Прямое подключение"
    type: select
    proxies:
      - "DIRECT"

  - name: "🚀 Прокси (Reality)"
    type: select
    proxies:
      - "🔒 Reality-VLESS"

  - name: "🛡️ Блокировка"
    type: select
    proxies:
      - "⛔ REJECT"
      - "✅ DIRECT"

# 📜 Правила (оптимизированы)
rules:
  # 1️⃣ Российские сервисы напрямую
  - GEOIP,RU,🎯 Прямое подключение
  - DOMAIN-SUFFIX,ru,🎯 Прямое подключение
  - DOMAIN-SUFFIX,рф,🎯 Прямое подключение
  - DOMAIN-SUFFIX,sberbank.ru,🎯 Прямое подключение
  - DOMAIN-SUFFIX,tinkoff.ru,🎯 Прямое подключение

  # 2️⃣ Заблокированные РКН сайты
  - RULE-SET,BlockedSites,🚀 Прокси (Reality)

  # 3️⃣ Блокировка рекламы
  - RULE-SET,BanAD,🛡️ Блокировка
  - RULE-SET,BanProgramAD,🛡️ Блокировка

  # 4️⃣ Остальное - напрямую
  - MATCH,🎯 Прямое подключение
